{
	"name": "lupos",
	"version": "0.1.0",
	"description": "A Typescript Transformer helps to compile lupos based projects.",
	"author": "pucelle",
	"license": "MIT",
	"homepage": "https://github.com/pucelle/lupos",
	"repository": {
		"type": "git",
		"url": "https://github.com/pucelle/lupos.git"
	},
	"type": "module",
	"main": "./web/out/index.js",
	"types": "./web/out/index.d.ts",
	"sideEffects": false,
	"exports": {
		".": "./web/out/index.js",
		"./compiler": "./compiler/out/index.js",
		"./transformer": "./transformer/out/index.js"
	},
	"scripts": {
		"build": "npm run build-cli && npm run build-web",
		"build-cli": "cd cli && tsc -b",
		"watch-cli": "cd cli && tsc -b -w",
		"build-web": "cd web && node ../cli/bin/luc -e",
		"watch-web": "cd web && node ../cli/bin/luc -e -w",
		"prepublish": "npm run build",
		"test": "cd tests && node ../cli/bin/luc && echo Compare git changes to get test result && node ../scripts/delete-tsbuildinfo.js",
		"test-web": "vitest"
	},
	"bin": {
		"luc": "./cli/bin/luc"
	},
	"devDependencies": {
		"@types/node": "^22.10.7",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4",
		"happy-dom": "^20.0.10"
	}
}